{ 
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules" ]
}